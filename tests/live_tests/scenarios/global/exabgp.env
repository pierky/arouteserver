[exabgp.api]
ack = false
chunk = 1
cli = true
compact = false
encoder = json
respawn = true
terminate = false

[exabgp.bgp]
openwait = 60

[exabgp.log]
all = true
configuration = true
message = true
network = true
packets = true
parser = true
processes = true
reactor = true
rib = true
routes = true
timers = false
daemon = true
destination = '/tmp/exabgp.log'
level = DEBUG

[exabgp.tcp]
acl = false
bind = '0.0.0.0 ::'
delay = 0
once = false
port = 179
